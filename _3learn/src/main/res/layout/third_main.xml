<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="mediaPlayer" />
    <SeekBar
        android:id="@+id/mediaPlayerSeekBar"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/mediaPlayerCurrentText"
        android:layout_marginStart="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/mediaPlayerStartBtn"
            android:onClick="onClickedMediaPlayer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="play" />
        <Button
            android:id="@+id/mediaPlayerStopBtn"
            android:onClick="onClickedMediaPlayer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="stop" />
        <Button
            android:id="@+id/mediaPlayerPauseBtn"
            android:onClick="onClickedMediaPlayer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="pause" />
        <Button
            android:id="@+id/mediaPlayerResumeBtn"
            android:onClick="onClickedMediaPlayer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="resume" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="AudioTrack" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/audioTrackBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="play" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SoundPool" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/soundPoolBtn"
            android:onClick="onClickedSoundPool"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="play" />
    </LinearLayout>
</LinearLayout>
