<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="mediaPlayer" />

        <SeekBar
            android:id="@+id/mediaPlayerSeekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/mediaPlayerCurrentText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/mediaPlayerStartBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClickedMediaPlayer"
                android:text="play" />

            <Button
                android:id="@+id/mediaPlayerStopBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClickedMediaPlayer"
                android:text="stop" />

            <Button
                android:id="@+id/mediaPlayerPauseBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClickedMediaPlayer"
                android:text="pause" />

            <Button
                android:id="@+id/mediaPlayerResumeBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClickedMediaPlayer"
                android:text="resume" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="AudioTrack" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/audioTrackTestGetPcmInfoBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClickedAudioTrack"
                android:text="测试获取PcmInfo" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/audioTrackPlayBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onClickedAudioTrack"
                    android:text="play(static/stream)" />

                <Button
                    android:id="@+id/audioTrackStopBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onClickedAudioTrack"
                    android:text="stop"
                    android:visibility="invisible" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/audioTrackPauseBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onClickedAudioTrack"
                    android:text="pause"
                    android:visibility="invisible" />

                <Button
                    android:id="@+id/audioTrackResumeBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onClickedAudioTrack"
                    android:text="resume"
                    android:visibility="invisible" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SoundPool" />

        <Button
            android:id="@+id/soundPoolBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClickedSoundPool"
            android:text="play" />
    </LinearLayout>
</ScrollView>
