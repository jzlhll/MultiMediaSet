<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SimplePCM2Wav" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonSimpleStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClickedSecond"
            android:text="开始" />

        <Button
            android:id="@+id/buttonSimpleStop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClickedSecond"
            android:text="停止" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DirectWav" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonDirectStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClickedDirectly"
            android:text="开始" />

        <Button
            android:id="@+id/buttonDirectStop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClickedDirectly"
            android:text="停止" />
    </LinearLayout>
</LinearLayout>
